<UserControl x:Class="WIFI.Windows.Controls.Kugel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WIFI.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" 
             d:DesignWidth="60"
             Name="KugelControl">
    <!--Ermöglicht das Visualisieren einer 
    Ganzzahl in einem gefärbten Kreis-->
    <Grid>
        <Ellipse
            Fill="Yellow"
            />
        <Ellipse
            Fill="White"
            Margin="0,0,30,30"
            Opacity="0.7"
            />
        <Label
            Content="{Binding ElementName=KugelControl, Path=Zahl}"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            FontSize="20pt"
            />
    </Grid>
</UserControl>
